<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPageTiga">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/image_landing_tiga"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/landing_page3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLineTop" />

    <TextView
        android:id="@+id/txt_task"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/text_splash_tiga"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_landing_tiga" />
    <EditText
        android:id="@+id/username_value"
        android:layout_width="200dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_task"
        android:layout_marginTop="20dp"
        android:background="@drawable/results_background"
        android:inputType="text"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif-medium"
        android:hint="@string/txt_dummy_user"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>